# ~/.bashrc_cnu_dev

# alias for establishing an ssh connection to cnuapp
alias sshdev='ssh -X cnuapp@hstrowd-dev.chi.cashnetusa.com'
alias sshlocdev='ssh -X cnuapp@192.168.56.2'
alias sshrel='ssh -X cnuapp@192.168.56.3'

# vpn alias
alias vpncnu='sudo vpnc-connect --gateway cnuvpn.cashnetusa.com --id cnu-ra-users --username hstrowd --domain cnu --natt-mode natt' 

# some other alaiases
alias ew='cd /export/web'
alias ewc='cd /export/web/cnuapp'

# service aliases
alias svu='sudo sv u /var/service/*'
alias svd='sudo sv d /var/service/*'
alias svr='svd && svu'

alias svul='sudo sv u /var/service/lsws'
alias svdl='sudo sv d /var/service/lsws'
alias svrl='svdl && svul'

alias svusv='sudo sv u /var/service/services'
alias svdsv='sudo sv d /var/service/services'
alias svrsv='svdsv && svusv'

alias svusp='sudo sv u /var/service/space'
alias svdsp='sudo sv d /var/service/space'
alias svrsp='svdsp && svusp'

# DB restart
alias dbr='sudo /etc/init.d/postgresql-8.3 restart'

# cnuapp cmd aliases
alias sc='/export/web/cnuapp/script/console'
alias bcr='/export/web/cnuapp/bin/cnurake'
alias bce='/export/web/cnuapp/bin/cnu_env'
alias vimce='vim /etc/cnu/cnu_env'

export P4CONFIG=~/.p4config
export P4EDITOR='emacs'
export PATH="/sbin:${HOME}/bin:${HOME}/bin/p4v-2009.2.258241/bin:/cnu/bin:${HOME}/dev/scripts:${PATH}"

# cnuapp slave DB connections
alias slave_us='psql -h slavedb.cashnetusa.com -p 5432 cnuapp_prod hstrowd'
alias slave_us2='psql -h slavedb2.cashnetusa.com -p 5432 cnuapp_prod hstrowd'
alias slave_us3='psql -h slavedb3.cashnetusa.com -p 5432 cnuapp_prod hstrowd'
alias slave_gb='psql -h slavedb.quickquid.co.uk -p 5432 cnuapp_prod_uk hstrowd'
alias slave_au='psql -h slavedb.dollarsdirect.com.au -p 5432 cnuapp_prod_au hstrowd'
alias slave_ca='psql -h slavedb.dollarsdirect.ca -p 5432 cnuapp_prod_ca hstrowd'
alias slave_jv='psql -h slavedbjv.cashnetusa.com -p 5432 cnuapp_prod_jv hstrowd'

